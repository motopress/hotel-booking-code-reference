{# this file is meant as a catch-all location for consumers to provide overrides without having to override specific parts #}
.phpdocumentor-table-of-contents__entry.-action:before{
    content: 'A';
}

.phpdocumentor-table-of-contents__entry.-filter:before{
    content: 'F';
}

.hooks-reference .phpdocumentor-table-of-contents dd {
    font-style: normal;
    margin-bottom: 40px;
}

.hooks-reference .phpdocumentor-table-of-contents dt {
    word-break: break-all;
    font-weight: bold;
}

.hooks-reference .phpdocumentor-table-of-contents dd:last-child {
    margin-bottom: 0;
}

.hooks-reference .phpdocumentor-table-of-contents {
    margin-bottom: 100px;
}

.hooks-reference .phpdocumentor-table-of-contents:last-child {
    margin-bottom: 0;
}

.arguments-table {
    width: 100%;
    margin-bottom: 25px;
}

.arguments-table th {
    font-weight: normal;
}

.arguments-table:last-child {
    margin-bottom: 0;
}

p.arguments-table-title {
    font-weight: 500;
    margin-bottom: 0;
}

.hooks-reference .phpdocumentor-table-of-contents .files {
    font-style: italic;
    font-size: .875em;
}

.arguments-table .phpdocumentor-cell {
    word-break: break-all;
}

.phpdocumentor-sidebar,
.phpdocumentor-content {
    padding-top: 50px;
}

.arguments-table .hooked-functions th:last-child {
    width: 10%;
}